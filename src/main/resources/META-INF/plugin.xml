<idea-plugin>
    <id>com.github.namhyungu.androidtemplateplugin</id>
    <name>android-template-plugin</name>
    <vendor>namhyun-gu</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.namhyungu.androidtemplateplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.namhyungu.androidtemplateplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.namhyungu.androidtemplateplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
